form.content__form.caseForm
  
  .casex-form-group
    
    .row
      .col-3
        p.formLabel DR#
      .col-9
        input#drNumInput.caseForm__input.caseForm__input--number(
          name='drNum'
          class='form-control'
          placeholder='Enter DR#...'
          min='0'
          max='999999999'
          step='1'
          type='number'
          )
    
    .row
      .col-3
        p.formLabel Master DR#
      .col-9
        input#masterDrNumInput.caseForm__input.caseForm__input--number(
          name='masterDrNum'
          class='form-control'
          placeholder='Enter Master DR#...'
          min='0'
          max='999999999'
          step='1'
          type='number'
          )
  
  .casex-form-group
  
    .row
      .col-3
        p.formLabel Division
      .col-9
        select#divisionInput.caseForm__input.caseForm__input--select(
          name='division'
          class='form-control'
          )
          option(selected disabled hidden) Select Division...
          option 77th Street
          option Harbor
          option Southwest
          option Southeast
    
    .row
      .col-3
        p.formLabel Bureau
      .col-9
        select#bureauInput.caseForm__input.caseForm__input--select(
          name='bureau'
          class='form-control'
          )
          option(selected disabled hidden) Select Bureau...
          option OSB
          option OCB
          option OWB
          option OVB
  
  .casex-form-group
    
    .row
      .col-3
        p.formLabel Notes
      .col-9
        textarea#notesInput.caseForm__input.caseForm__input--text(
          name='notes'
          placeholder='Enter Notes...'
          type='text'
          class='form-control'
          rows='5'
          )
        
  .casex-form-group
        
    .row
      .col-3
        p.formLabel Date Occured
      .col-9
        input#dateOccuredInput.caseForm__input.caseForm__input--text(
