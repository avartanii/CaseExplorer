extends layout-internal

block content
  
  .row
    .col-6
      p To create a new case record, please complete the following form and click submit at the bottom. Optionally, you may upload an Excel file on the right to auto-fill the form.
    .col-6
      label(class='custom-file')
        input(type='file' class='custom-file-input' id='upload-form')
        span(class='custom-file-control')
  
  .casex-spacer
  
  .row
    .col-2
    .col-lg-8.col-sm-12
      .case-form-input-wrapper
        .case-form-input-content
          include form-master
    .col-2
  
  .casex-spacer
  
  .row
    .col-2
    .col-lg-8.col-sm-12
      input(type='button' class='btn btn-primary btn-block' id='button-submit-forms' value='Submit')
      .casex-spacer
      h6.text-danger#submitFormSmall
    .col-2

  script(language='JavaScript' src='js/page-input.js')
  script(language='JavaScript' src='js/import.js')
  
  script.
    window.InputController.init();
